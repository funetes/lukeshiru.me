{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "ES5",
      "ESNext.Array"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
